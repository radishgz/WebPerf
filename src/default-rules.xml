<profile>
  <name>All Rules Profile</name>
  <language>web</language>
  <rules>
   
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>CssCheck</key>
      <Severity>2</Severity>
       <parameters>
        <parameter>
          <key>AllowedCssFiles</key>
          <value>\boss\cs\css,</value>
        </parameter>     
      </parameters>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>ScriptCheck</key>
      <priority>MAJOR</priority>
      <Severity>2</Severity>
    </rule>
     
    
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>ImgCheck</key>
      <Severity>2</Severity>
       <parameters>
        <parameter>
          <key>ExcludeFiles</key>
          <value>+,?action</value>
        </parameter>        
      </parameters>
    </rule>
     <rule>
      <repositoryKey>Web</repositoryKey>
      <key>LongJavaScriptCheck</key>
      <parameters>
        <parameter>
          <key>maxLines</key>
          <value>15</value>
        </parameter>
        <parameter>
          <key>maxLength</key>
          <value>300</value>
        </parameter>
      </parameters>
    </rule>
  </rules>

 <rule>
      <repositoryKey>Web</repositoryKey>
      <key>IllegalAttributeCheck</key>
      <!-- see http://www.w3.org/TR/REC-html40/index/attributes.html -->
      <parameters>
        <parameter>
          <key>attributes</key>
          <value>CAPTION.align, IFRAME.align, IMG.align, INPUT.align, OBJECT.align,
            LEGEND.align, TABLE.align, HR.align,
            DIV.align, H1.align, H2.align, H3.align, H4.align, H5.align, H6.align, P.align,
            alink, background, bgcolor,
            IMG.border, OBJECT.border, clear, color, compact, face, hspace, TD.height, TH.height,
            language, link,
            noshade, nowrap, HR.size, FONT.size, start, text, LI.type, OL.type, UL.type, LI.value,
            version,
            HR.width,
            PRE.width, TD.width, TH.width</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>IllegalElementCheck</key>
      <!-- see http://www.w3.org/TR/REC-html40/index/elements.html -->
      <parameters>
        <parameter>
          <key>elements</key>
          <value>applet, basefont, center, dir, font, isindex, menu, s, strike, u</value>
        </parameter>
      </parameters>
    </rule>
     <rule>
      <repositoryKey>Web</repositoryKey>
      <key>UnclosedTagCheck</key>
      <parameters>
        <parameter>
          <key>ignoreTags</key>
          <value>HTML,HEAD,BODY,P,DT,DD,LI,OPTION,THEAD,TH,TBODY,TR,TD,TFOOT,COLGROUP,IMG,INPUT,BR,HR,FRAME,AREA,BASE,BASEFONT,COL,ISINDEX,LINK,META,PARAM</value>
        </parameter>
      </parameters>
    </rule>
     <rule>
      <repositoryKey>Web</repositoryKey>
      <key>DynamicJspIncludeCheck</key>
      <priority>MAJOR</priority>
    </rule>
    
     <rule>
      <repositoryKey>Web</repositoryKey>
      <key>IllegalTagLibsCheck</key>
    </rule>
    
     <rule>
      <repositoryKey>Web</repositoryKey>
      <key>IllegalTagLibsCheck</key>
       <parameters>
        <parameter>
          <key>tagLibs</key>
          <value>/WEB-INF/appframe2.tld</value>
        </parameter>
      </parameters>
    </rule>
     <rule>
      <repositoryKey>Web</repositoryKey>
      <key>ImgWithoutWidthOrHeightCheck</key>
    </rule>
    
     <rule>
      <repositoryKey>Web</repositoryKey>
      <key>ItemTagNotWithinContainerTagCheck</key>
    </rule>
     <rule>
      <repositoryKey>Web</repositoryKey>
      <key>LinkToNothingCheck</key>
    </rule>
</profile>
